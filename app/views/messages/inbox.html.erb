<h1>Message from this friend:</h1>
<% @conter_friendships.each do |friendship| %>
  <% if @user_friendship.friend_id == friendship.user_id %>
	<% friendship.messages.each do |message| %>
	  <p>From: <%= message.user.email %></p>
	  <p>Title: <%= message.title%></p>
	  <p>Content: <%= message.content %></p>
	<% end %>
  <% end %>
<% end %>